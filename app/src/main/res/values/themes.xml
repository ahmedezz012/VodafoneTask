<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VodsfoneTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textRegular">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textxSmallRegular" parent="textRegular">
        <item name="android:textSize">@dimen/font_xsmall</item>
    </style>

    <style name="textSmallRegular" parent="textRegular">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="textMediumRegular" parent="textRegular">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="textLargeRegular" parent="textRegular">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="textxLargeRegular" parent="textRegular">
        <item name="android:textSize">@dimen/font_xlarge</item>
    </style>

    <style name="textxxLargeRegular" parent="textRegular">
        <item name="android:textSize">@dimen/font_xxlarge</item>
    </style>

    <style name="textxxxLargeRegular" parent="textRegular">
        <item name="android:textSize">@dimen/font_xxxlarge</item>
    </style>
</resources>